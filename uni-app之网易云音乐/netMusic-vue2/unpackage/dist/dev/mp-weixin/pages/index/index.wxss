
.musicHead{
	width: 100%; 
	height: 75px;
	font-size: 16px;
	text-align: center;
	line-height: 80px;
	color: black;
	position: relative;
}
.musicHeadIcon{
	position: absolute; left: 8px; top: 33px; width: 90px; height: 31px; 
	display: flex;
	justify-content: space-evenly;
	line-height: 31px;
	border-radius: 15px;
	background-color: rgb(0, 0, 0,0.3);
}


.index-list{
		margin: 0 30px;
}
.index-list-item{
		display: flex;
		margin-bottom: 34rpx;
}
.index-list-img{
		top: 10px;
		width: 212rpx;
		height: 212rpx;
		position: relative;
		border-radius: 30rpx;
		overflow: hidden;
		margin-right: 22rpx;
}
.index-list-img text{
		position: absolute;
		left: 12rpx;
		bottom:16rpx;
		color: white;
		font-size: 24rpx;
		line-height: 66rpx;
}
.index-list-img ._img{
		width: 100%;
		height: 100%;
}
.index-list-text{
		margin-top: 10px;
}
.index-search ._span{
	display: flex;
	margin: 70rpx,30px,30rpx,30rpx;
	background-color: rgb(0, 0, 0,0.1);
	height: 35px;
	align-items: center;
	border-radius: 50rpx;
	margin-top: 15px;
	margin-left: 10px;
	width: 90%;
}
.index-search input{
	font-size: 20px;
	flex: 1;
}
.index-search uni-icons{
	margin-right: 26rpx;
	margin-left: 28rpx;
}


